@import "normalize.css"
@import "font-awesome.css"
@import "title.css"

@import 'nib'

body
	font-family 'Open Sans', sans-serif
	background: #e0ecef;

a
	text-decoration none
	color: #969696;
	transition-duration 0.3s
	
a:hover
	color: #e74c3c

hr
	margin-top: 20px;
	margin-bottom: 20px;
	border: 0;
	border-top: 1px solid #eee;

.section-inner
	width 1440px
	max-width 93%
	margin 0 auto	
	position relative
	
#header
	background-image url(/assets/img/bgHeader.jpg)
	background-position 50% 55%
	background-size cover
	box-shadow inset 0px 0px 50px #78736D

// Title
#title
	text-align center
	padding 60px 0
	color #fff
	text-shadow 2px 2px 0px rgba(0,0,0,0.25)
	
#blog-title
	a
		font-weight 900
		font-size 3.5em
		color #fff
		transition-duration 0.3s

#blog-subtitle
	font-weight 900
	font-size 1.3em
	
	@media all and (max-width: 500px)
		display none

// Title end


// Navigation

#navigation
	width 100%
	background-color: rgba(29, 29, 29, 0.9);
	position relative
	
#main-menu
	margin 0
	list-style none
	padding 20px
	padding-left 0
	
	li
		display inline
		position relative
		padding 20px
		padding-right 30px
		
	a
		font-size 1em
		font-weight 700
		color #DCDCDC
		text-transform uppercase
		letter-spacing 1px
		transition-duration 0.3s
		
	li:hover
		a
			cursor pointer
			color #fff

.slash:before
	content "/"
	display block
	position absolute
	right 0
	top 50%
	margin-top -.7em;
	font-size 1.4em
	color #989898
	font-weight 300
	z-index 1000

#menu-social
	position absolute
	right 0
	top 50%
	margin-top -18px
	list-style none
	
	li
		float left
		margin-left 5px
		margin-right 5px
		text-align center
		
		:hover
				background #ca2017
		
		a
			display block
			width 36px
			height 36px
			background #333
			color #fff
			border-radius 999px
			position relative
			transition-duration 0.3s
			
			i
				margin-top 9px



// end Navigation

// article
#container
	margin-top 1.5%
	
.post-container
	width: 31.3333333333%
	padding: 0 1% 3.5% 1%;

.post
	width: 100%;
	position: relative;
	background #ffffff
	border-radius 4px
	box-shadow: 0 3px 3px rgba(0,0,0,.2)
	transition-duration 0.3s
	
	img
		width 100%
		border-top-left-radius 4px
		border-top-right-radius 4px


.post-content
	padding: 0 40px 40px;

	header
		margin: 5px 0;
		
		a
			color: #292929;
			font-size 1.5em
			transition: all 0.3s ease-in-out;
		a:hover
			color: #29ddff;
			
.post-content:before
	content: '';
	border-width: 10px;
	border-style: solid;
	border-color: rgba(251,251,251,0) rgba(255,255,255,0) #fff rgba(255,255,255,0);
	position: relative;
	z-index: 99;
	top: -37px; 

.post-excerpt
	line-height: 1.75em;
	color: #555555;
	
.tag-list
	text-transform: uppercase;
	font-size: 0.75em;
	margin-bottom: 15px;
	
	a
		color: #969696;
		border: 1px solid #969696;
		border-radius: 12px;
		padding: 5px 10px;
		margin: 0 5px 4px 0;
		line-height: 1em;
		display: inline-block;
		transition: all 0.3s ease-in-out;
		
	a:hover
		color: #ffffff;
		border: 1px solid #e74c3c;
		background: #e74c3c;
		
.post-footer
	margin-top: 15px;
	font-size: 0.75em;
	text-transform: uppercase;
	color: #969696;
// end article

// Responsive
@media (max-width: 1140px)
	.post-container
		width 48%
		
@media (max-width: 800px)
	.post-container
		width 100%
		margin-top 0
// end Responsive

